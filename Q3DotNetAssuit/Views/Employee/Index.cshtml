@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table table-hover table-bordered">

    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td><a href="/Employee/Edit/@item.Id">Edit</a></td>
        </tr>
    }

</table>

